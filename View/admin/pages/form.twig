{% extends "admin/layout.twig" %}

{% block content %}
    <header class="page-header">
        <h1>
            {% if form.vars.value %}
                {{ form.vars.value.name }}
            {% else %}
                New page
            {% endif %}
        </h1>
    </header>

    <form action="/admin/pages/form" method="post">
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Save</button> or <a href="/admin/pages">go back</a>
    </form>
{% endblock %}
